pipeline {
    agent any

    environment {
        BROWSERSTACK_USERNAME = credentials('browserstack-username')
        BROWSERSTACK_ACCESS_KEY = credentials('browserstack-accesskey')
    }

    tools {
        nodejs "nodejs-playwright"
    }

    stages {
        stage('Checkout') {
            steps {
                // Check out the code from your repository
                git 'https://github.com/vikrantd1203/Playwright_LocalTesting.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    // Install Playwright and other Node.js dependencies
                    sh 'npm install'
                }
            }
        }

        stage('Run Playwright Tests') {
            steps {
                script {
                    // Run Playwright tests with BrowserStack
                    sh 'npm run sample-test'
                }
            }
        }
    }

    post {
        always {
            // Collect test reports, logs, etc.
            archiveArtifacts artifacts: 'test-results/*.xml', allowEmptyArchive: true
        }
    }
}
